# Custom aliases
alias home='cd ~'
alias c='clear'
alias ll='ls -lhaG'

# Git shortcuts
alias gs='git status -sb'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'

# Python env
alias python='python3'
alias pip='uv pip'
alias venv='python -m venv .venv && source .venv/bin/activate'

# Python tools
alias ruffcheck='python -m ruff check .'
alias rufffix='python -m ruff fix .'

# uv
alias 'uvs!'='uv clean && uv sync --reinstall'
